<% unless request.env["HTTP_TURBO_FRAME"].present? || action_name == "search" %>
  <div class="card">
    <div class="card-image bg-primary" id="new_video" onclick="document.getElementById('mod').classList.add('active');"><i class="icon icon-2x icon-plus" id="plus"></i></div>
  </div>
<% end %>
<% @videos.each do |video| %>
<% a = link_to "", video, class: "full d-block no-shadow", "data-turbo": "false" %>
  <div class="card vcard">
    <div class="card-image placeholder">
      <div class="parallax fullh">
        <div class="parallax-top-left" tabindex="1"><%= a %></div>
        <div class="parallax-top-right" tabindex="2"><%= a %></div>
        <div class="parallax-bottom-left" tabindex="3"><%= a %></div>
        <div class="parallax-bottom-right" tabindex="4"><%= a %></div>
        <div class="parallax-content text-break ">
          <div class="parallax-front"><h2><%= video.title %></h2></div>
          <div class="parallax-back fullh">
            <div class="hidden full"><%= image_tag(video.thumbnail, class: "img-responsive mb-1") %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-2"><%= link_to content_tag(:span,video.title,class: "placeholder boxbreak"), video, class: "card-footer no-shadow", "data-turbo": "false" %></div>
    <%= link_to(time_ago_in_words(video.created_at)+" ago", video, class: "card-footer-last no-shadow placeholder", "data-turbo": "false") %>
  </div>
<% end %>
<template data-controller="rmPh"></template>
