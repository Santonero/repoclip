<div class="modal" id="mod">
  <div onclick="hideModal()" class="modal-overlay"></div>
  <div class="modal-container">
    <div class="modal-header">
      <%= link_to "", root_path, onclick: "hideModal();return false;", class: "btn btn-clear float-right", "data-turbo": false %>
      <div class="modal-title h5"><%= title.html_safe %></div>
    </div>
    <div class="modal-body">
      <div class="content"><%= turbo_frame_tag "add", src: path %></div>
    </div>
    <div class="modal-footer">
      <button class="btn btn-primary vbtn" form="vidform"><%= "#{sb} Video" %></button>
      <button class="btn btn-link" onclick="hideModal()">Close</button>
    </div>
  </div>
</div>
