<header class="navbar p-2">
  <section class="navbar-section">
    <a href="/videos" class="navbar-brand mr-2"><b>REPOCLIP</b></a>
    <a href="https://github.com/santo-nero/repoclip" target= "_blank" class="btn btn-link">GitHub</a>
  </section>
  <section class="navbar-center">
    <%= form_with url: "/search", method: :get do |form| %>
      <div class="input-group input-inline">
        <%= form.text_field :query, class: "form-input", placeholder: "search", id: "textbox", style: "border-radius:20px 0 0 20px;" %>
        <%= button_tag(:class => "btn", style: "border-radius: 0 20px 20px 0;") do %>
          <i class="icon icon-search"></i>
        <% end %>
      </div>
    <% end %>
  </section>
  <section class="navbar-section" id="navlogo">
  <%= image_tag("clipico.svg") %>
  </section>
</header>
