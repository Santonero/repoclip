<%= turbo_stream.replace :pagination do %>
  <%= render "grid" %>
<% end %>

<%= turbo_stream.append_all "body" do %>
  <template data-controller="rmPh"></template>
<% end %>

<%= turbo_stream.append "grid" do %>
  <% if @pagination.next_page? %>
  <%= turbo_frame_tag :pagination,
    loading: :lazy,
    src: search_path(format: :turbo_stream, query: params[:query], page: @pagination.next_page) %>
  <% end %>
<% end %>
