  <div class="toast toast-success"><button class="btn btn-clear float-right" onclick="document.body.removeChild(this.parentNode)"></button><%= notice %></div>
<% end %>
<%= render "navbar" %>
<div class= "container" style="padding-top:14px;">
  <%= render "grid" %>
</div>
