<div class="container mt-16">
  <h1>Forgot your password?</h1>
  <div class="column col-6 col-xs-12 col-sm-12 col-md-9 col-lg-7">
    <%= form_with url: password_reset_path do |form| %>
      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-input", placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= form.submit "Send email", class: "btn btn-primary input-group-btn" %>
      </div>
    <% end %>
  </div>
</div>
