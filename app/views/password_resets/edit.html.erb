<div class="container mt-16">
  <h1>Reset Password</h1>
  <div class="column col-6 col-xs-12 col-sm-12 col-md-9 col-lg-7">
    <%= form_with model: @user, url: password_reset_path(token: params[:token]) do |form| %>
      <div class="form-group">
        <% if form.object.errors[:password].any? %>
          <div class="has-error">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-input", placeholder: "Password" %>
            <% form.object.errors.full_messages_for(:password).each do |message| %>
              <p class="form-input-hint"><%= message %></p>
            <% end %>
        <% else %>
          <div>
            <%= form.label :password, "Password", class: "form-label" %>
            <%= form.password_field :password, class: "form-input", placeholder: "Password" %>
        <% end %>
          </div>
      </div>

      <div class="form-group">
        <% if form.object.errors[:password_confirmation].any? %>
          <div class="has-error">
            <%= form.label :password_confirmation, class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-input", placeholder: "Confirmation" %>
            <% form.object.errors.full_messages_for(:password_confirmation).each do |message| %>
              <p class="form-input-hint"><%= message %></p>
            <% end %>
        <% else %>
          <div>
            <%= form.label :password_confirmation, "Password Confirmation", class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-input", placeholder: "Confirmation" %>
        <% end %>
          </div>
      </div>

      <div class="form-group">
        <%= form.submit "Reset Password", class: "btn btn-primary input-group-btn" %>
      </div>
  <% end %>
  </div>
</div>
